<%= form_with(model: @qualification, url: create_qualification_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">New Qualification</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Qualification Title:</label><span class="font-red">*</span>
      <%= form.text_field :title, class: 'form-control', placeholder: 'BSc Software Engineering', required: true %>
    </div>

    <div class="form-group">
      <label>Organisation:</label><span class="font-red">*</span>
      <%= form.text_field :organisation, class: 'form-control', placeholder: 'Bournemouth University', required: true %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
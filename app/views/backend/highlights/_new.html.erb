<%= form_with(model: @highlight, url: create_highlight_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">Editing <%= @highlight.title %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Job Title / Qualificiation:</label><span class="font-red">*</span>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Developer or BSc Software Engineering', required: true %>
    </div>

    <div class="form-group">
      <label>Organisation:</label><span class="font-red">*</span>
      <%= form.text_field :organisation, class: 'form-control', placeholder: 'UKCloud or Bournemouth University', required: true %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Start Date</label><span class="font-red">*</span>
        <%= form.text_field :start_date, type: 'date', class: 'form-control', required: true%>
      </div>

      <div class="form-group col-md-6">
        <label>End Date (or leave blank)</label>
        <%= form.text_field :end_date, type: 'date', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label>Description:</label><span class="font-red">*</span>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Type here...', rows: 4, required: true %>
    </div>

    <div class="form-group">
      <label>URL: (optional)</label>
      <%= form.text_field :url, class: 'form-control', placeholder: 'http://url/page' %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
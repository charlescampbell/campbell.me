<%= form_with(model: @academic_year, url: update_academic_year_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">Edit Academic Year</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Qualification:</label><span class="font-red">*</span>
      <%= form.collection_select :qualification_id, Qualification.all,:id, :title, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Title:</label><span class="font-red">*</span>
      <%= form.text_field :title, class: 'form-control', placeholder: 'First Year - General Computing', required: true %>
    </div>

    <div class="form-group">
      <label>Overall Grade:</label><span class="font-red">*</span>
      <%= form.text_field :grade, class: 'form-control', placeholder: 'FIRST', required: true %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
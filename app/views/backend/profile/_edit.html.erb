<%= form_with(model: @profile, url: update_profile_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">Editing <%= @profile.title %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Title:</label><span class="font-red">*</span>
      <%= form.text_field :title, class: 'form-control', placeholder: 'name', required: true %>
    </div>

    <div class="form-group">
      <label>Value:</label><span class="font-red">*</span>
      <%= form.text_field :value, class: 'form-control', placeholder: 'Charlie Campbell', required: true %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
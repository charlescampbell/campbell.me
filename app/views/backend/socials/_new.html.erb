<%= form_with(model: @social, url: create_social_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">New Social Link</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-group">
      <label>Friendly Name:</label><span class="font-red">*</span>
      <%= form.text_field :friendly_name, class: 'form-control', placeholder: 'email', required: true %>
    </div>

    <div class="form-group">
      <label>URL:</label><span class="font-red">*</span>
      <%= form.text_field :url, class: 'form-control', placeholder: 'https://url.co.uk', required: true %>
    </div>

    <div class="form-group">
      <label>Icon</label><span class="font-red">*</span>
      <%= form.text_field :icon, class: 'form-control', placeholder: 'fa fa-book', required: true %>
    </div>

    <div class="form-group">
      <label>Display on mobile? (optional)</label><span class="font-red">*</span>
      <%= form.text_field :display, class: 'form-control', placeholder: 'y / n' %>
    </div>

    <div class="form-group">
      <label>Position</label><span class="font-red">*</span>
      <%= form.number_field :position, class: 'form-control', placeholder: '1..10', required: true %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
<%= form_with(model: @tag, url: create_tag_path) do |form| %>
  <div class="modal-header">
    <h5 class="modal-title">Add new tag for <%= unit_title_for(params[:education_id]) %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <%= form.hidden_field :education_id, value: params[:education_id], required: true %>

    <div class="form-group">
      <label>Tag:</label><span class="font-red">*</span>
      <%= form.text_field :tag, class: 'form-control', placeholder: 'i.e. RUBY, RAILS', required: true %>
    </div>

    <div class="form-group">
      <label>Colour:</label>

      <%= form.select :colour, options_for_select(
          [
            ['Red', 'danger'], ['Green', 'success'], ['Yellow', 'warning'],
            ['Blue', 'info'], ['White', 'light'], ['Black', 'dark']
          ]
        ), {}, class: 'form-control'
      %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'submit', class: 'focused-button' %>
    <button type="button" class="focused-button-danger" data-dismiss="modal">cancel</button>
  </div>
<% end %>
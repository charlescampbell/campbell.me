<section class="project-section section">
  <div class="container">
    <div class="project-links">
      <%= link_to 'new', new_image_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'project-link' } %>
      <hr>
      <div class="row">
        <% @images.each do |image| %>
          <div class="col-lg-6 col-md-12 mb-6">
            <%= link_to image_tag(image.image.url), edit_gallary_path(image), { remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window', class: 'img-fluid z-depth-1' } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>